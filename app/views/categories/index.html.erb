<h1>Listing categories - <%= @categories.count %></h1>
<%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
<%= link_to 'Sort Categories', sort_categories_path, class: "btn btn-primary" %>

<br />
<br />

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Number of Feeds</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.position %></td>
        <td><%= category.name %></td>
        <td><%= category.feeds.count %></td>
        <td><%= link_to 'Show', category, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

