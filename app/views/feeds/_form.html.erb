<%= form_for(@feed) do |f| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% @feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, Category.all.collect { |cat| [ cat.name, cat.id ] }, {}, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :feed_type %><br>
    <%= f.text_field :feed_type, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :htmlurl %><br>
    <%= f.text_field :htmlurl, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :xmlurl %><br>
    <%= f.text_field :xmlurl, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Save Feed", class: "btn btn-success"  %>
  </div>
<% end %>
