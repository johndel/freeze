<h1>Listing articles</h1>
<%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
<%= link_to 'Fetch Articles', fetch_articles_feeds_path, class: "btn btn-primary" %>
<%= paginate @articles %>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Feed</th>
      <th>Title</th>
      <th>Author</th>
      <th>Url</th>
      <th>Article published</th>
      <th>Article updated</th>
      <th>Read at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.feed.title %></td>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.url %></td>
        <td><%= article.article_published %></td>
        <td><%= article.article_updated %></td>
        <td><%= article.read_at %></td>
        <td><%= link_to 'Show', article, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles %>
